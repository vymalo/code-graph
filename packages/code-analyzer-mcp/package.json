{
  "name": "@vymalo/code-graph-mcp",
  "version": "1.0.0-rc.1",
  "description": "MCP server to run the code analyzer CLI",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "start.sh"
  ],
  "bin": {
    "vymalo-code-graph-mcp": "start.sh"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "inspector": "DANGEROUSLY_OMIT_AUTH=true mcp-inspector -- node ./build/main.js --debug"
  },
  "keywords": [
    "mcp",
    "code-analysis"
  ],
  "author": "Roo",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "execa": "^8.0.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@types/node": "^20.11.24",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@vymalo/code-graph-analyzer": "*"
  }
}
